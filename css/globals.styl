// Color scheme

$bgPanic   = #C21D1D
$bgDarkest = #000
$bgDarker  = #222
$bgDark    = #444
$bgMid     = #808080

$fgMarquee   = orange
$fgFocus     = #CC7E00
$fgBrightest = white
$fgBright    = whitesmoke
$fgDim       = #AAA

// Functions

pressable()
  background  #222
  border      none
  box-shadow  0 0 8px #222
  color       whitesmoke
  cursor      pointer
  fill        whitesmoke

  &:hover
    background #333

  &:active
    color      #AAA
    box-shadow 0 0 4px #000 inset
    fill       #AAA

  &:disabled
    background #222
    color      #444
    cursor     default
    fill       #444

    &:active
      background #222

backAndForeColor($bg = $bgDarkest, $fg = $fgBright)
  background $bg
  color      $fg
  fill       $fg

gradient($dir, $col1, $stop1, $col2, $stop2)
  linear-gradient(to $dir, $col1 $stop1, $col2 $stop2)

flexbox($dir = row, $justify = flex-start)
  display         flex
  flex-direction  $dir
  justify-content $justify

// Global classes

.hidden
  display none !important

.unselectable
  -webkit-user-select none
  -moz-user-select    none
  -ms-user-select     none
  user-select         none

.warningDialog
  flex-grow 1
  padding   1rem

  h1
    font-style italic

  p
    line-height 150%
    margin      1rem