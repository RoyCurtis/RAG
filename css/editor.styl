#editor
  background  #222
  flex-grow   1
  font-size   3em
  padding     0.5em
  overflow-x  hidden
  overflow-y  auto

  // All selectable elements
  span[data-type=excuse],    span[data-type=integer],     span[data-type=coach],
  span[data-type=named],     span[data-type=optional],    span[data-type=phrase],
  span[data-type=phraseset], span[data-type=platform],    span[data-type=service],
  span[data-type=station],   span[data-type=stationlist], span[data-type=time]
    border        2px solid transparent
    border-top    none
    border-bottom none
    border-radius 8px
    padding       0 4px
    margin        0 4px

    &:hover
      background   rgba(128, 128, 128, 0.1)
      border-color white

  // Editable elements
  span[data-type=optional], span[data-chance], span[data-type=platform],
  span[data-type=time]
    cursor pointer

    &[editing]
      background    #CC7E00
      color         white
      border-radius 8px 8px 0 0
      box-shadow    8px 8px 8px rgba(0, 0, 0, 0.5)

  // Optional elements
  span[data-type=optional], span[data-chance]

    &[collapsed]
      border  none
      padding 0

      *
        display none

      &:active::before
        activePressable()

      &::before
        pressable()
        content 'â‹®'
        display inline-block
        font-size x-large
        padding 2px
        transform translateY(-9px)